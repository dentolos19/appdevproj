{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Production",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "args": ["run", "--no-debugger", "--no-reload"],
      "env": {
        "FLASK_APP": "src/main.py",
        "PATH": "${workspaceFolder}/venv/bin:${env:PATH}"
      },
      "windows": {
        "env": {
          "FLASK_APP": "src/main.py",
          "PATH": "${workspaceFolder}\\venv\\Scripts;${env:PATH}"
        }
      },
      "autoStartBrowser": true,
      "preLaunchTask": "setup"
    },
    {
      "name": "Development",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "args": ["run"],
      "env": {
        "FLASK_APP": "src/main.py",
        "FLASK_DEBUG": "1"
      },
      "windows": {
        "env": {
          "FLASK_APP": "src/main.py",
          "FLASK_DEBUG": "1"
        }
      },
      "jinja": true,
      "autoStartBrowser": true,
      "preLaunchTask": "setup"
    }
  ]
}
